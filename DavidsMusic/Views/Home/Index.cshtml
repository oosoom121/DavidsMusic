@model IEnumerable<Products>
@{
	ViewData["Title"] = "Home";

}
<section class="bg-dark p-0 m-0">
	<header class="pages">@ViewData["Title"]</header>
</section>
<!-- *****  Carousel  ***** -->
<div id="carouselExampleIndicators" class="carousel slide col-8 m-auto" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner">
		<div class="carousel-item active">

			<img src="~/images/banner1.svg" alt="...">
			<div class="carousel-caption d-none d-md-block">
				<p>
					Learn how to build ASP.NET apps that can run anywhere.
					<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
						Learn More
					</a>
				</p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner2.svg" alt="...">
			<div class="carousel-caption d-none d-md-block">
				<p>
					There are powerful new features in Visual Studio for building modern web apps.
					<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
						Learn More
					</a>
				</p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner3.svg" alt="...">
			<div class="carousel-caption d-none d-md-block">
				<p>
					Bring in libraries from NuGet and npm, and automate tasks using Grunt or Gulp.
					<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
						Learn More
					</a>
				</p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="~/images/banner4.svg" alt="...">
			<div class="carousel-caption d-none d-md-block">
				<p>
					Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
					<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
						Learn More
					</a>
				</p>
			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<!--  *****  End Carousel  *****  -->
<br />
<hr class="rounded-circle homeRule">

<!--  *****  Product Cards  *****  -->
<div class="container">
	<div class="row">
		<div class="card-columns">
			@foreach (var product in Model)
			{
				<a class="card-link" asp-controller=Products asp-route-id=@product.ID>
					<div class="card border-secondary">
						<img class="card-img-top m-auto p-3" src="@product.ImageUrl" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-title">@product.Brand @product.Type</h5>
							<p class="card-text">@product.Description</p>
						</div>
						<div class="card-text">
							<a href="#" class="card-link">@product.UnitPrice</a>
						</div>
					</div>
				</a>
			}
		</div>
	</div>
</div>


